              <text>学员：{{item.mem_name}}</text>
              <text>时间：{{item.datex}} {{item.timex}}</text>
              <text>课程：{{item.course_name}}</text>
              <text>教练：{{item.coach_name}}</text>
            </view>
            <text>单价：{{item.price}}</text>
          </view>
        </block>
      </view> -->
      <view wx:for="{{clubIncomeData}}" wx:key="this" class="displaycolumn card">
			<view class="first displayrow">
				<view class="timetext space">{{item.datex}}</view>
        <view class="timetext space">{{item.timex}}</view>
				<view class="space money2">
					<text class="money">￥</text>
					<text class="number">{{item.price}}</text>
				</view>
			</view>
			<view class="course displayrow">
				<view class="space">课程：{{item.course_name}}   会员：{{item.mem_name}}</view>
				<view class="type space">{{item.type}}原价</view>
			</view>
			<view class="field">教练：{{item.coach_name}}</view>
		</view>
    </view>
  </scroll-view>
</view>
