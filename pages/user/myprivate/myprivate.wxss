/* pages/user/myprivate/myprivate.wxss */
.container{
  background:#FFFFFF;
}
.top{
  width:100%;
  height:66rpx;
  display:flex;
  flex-direction:row;
  align-items:center;
}
.top image{
  display:block;
  width:20rpx;
  height:20rpx;
}
.top image:nth-child(1){
  margin-left:5%;
}
.top input{
  width:70%;
  height:100%;
  font-size:22rpx;
  color:#999999;
  margin-left:3%;
}
.top text{
  font-size:30rpx;
  color:#666666;
}
.middle{
  width:100%;
  height:270rpx;
  display:flex;
  flex-direction:column;
}
.middle text{
  width:100%;
  height:90rpx;
  line-height:90rpx;
  font-size:26rpx;
  color:#999999;
  margin-left:7%;
  border-bottom:3rpx solid #EEEEEE;
}
.middle text:first-child{
  color:#EE6F2D;
}
.bottom{
  width:100%;
  height:auto;
}
.list{
  width: 90%;
  height:210rpx;
	margin: 0 5%;
  display:flex;
  flex-direction:row;
  align-items: center;
	justify-content: space-around;
  border-bottom:3rpx solid #EEEEEE;
}
.list_left{
  width: 18%;
  height:100%;
  display:flex;
	flex-direction: row;
  align-items:center;
}
.list_left image{
  width: 120rpx;
  height: 120rpx;
	border-radius: 50%;
}
.list_right{
  width: 75%;
  height: 65%;
  line-height: 50rpx;
	margin-top: 12rpx;
  display:flex;
  flex-direction:column;
	justify-content: space-around;
}
.list_right text:nth-child(1){
  font-size:32rpx;
  color:#333333;
}
.list_right text:nth-child(2){
  font-size:22rpx;
  color:#666666;
}
.list_right text:nth-child(3){
  font-size:22rpx;
  color:#666666;
}