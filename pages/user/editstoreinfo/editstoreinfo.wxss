/* pages/user/editstoreinfo/editstoreinfo.wxss */
.container{
  background:#FFFFFF; 
}
.top{
  width:100%;
  height:90rpx;
  background:#2D2E33;
  display:flex;
  justify-content:flex-end;
  position:fixed;
  align-items:center;
  top:0;
  z-index:10;
}
.edit{
  color:#FFFFFF;
  font-size:30rpx;
  margin-right:5%;
}
.list_top{
  margin-top:100rpx !important;
}
.list{
  width:90%;
  height:auto;
  margin:0 auto;
  display:flex;
  flex-direction:column;
}
.list text:nth-child(1){
  font-size:30rpx;
  color:#333333;
  margin-top:30rpx;
  margin-bottom:20rpx;
}
.title_image{
  display:block;
  width:150rpx;
  height:150rpx;
}
.content{
  color:#999999 !important;
}
#map{
  margin-top:20rpx;
  z-index:1;
}
.storearea{
  display:flex;
  flex-direction:row;
  justify-content:space-between;
}
.storearea text:nth-child(2){
  margin-top:30rpx;
  margin-bottom:20rpx;
}
.sheshi{
  display:flex;
  flex-direction:row;
  align-items:center;
  margin-top:30rpx;
  margin-bottom:30rpx;
}
.sheshi text:nth-child(1){
  margin-top:0;
  margin-bottom:0;
}
.sheshi image{
  display:block;
  width:30rpx;
  height:30rpx;
  margin-left:2%;
}
.sheshiitem{
  display:flex;
  flex-direction:row;
  justify-content:space-around;
  align-items:center;
}
.sheshiitem text{
  margin-top:0 !important;
  margin-bottom:0 !important;
  font-size:30rpx;
  color:#666666;
  background:#EEEEEE;
}
.imgall{
  width:90%;
  height:auto;
  display:flex;
  flex-direction:row;
  flex-wrap:wrap;
  justify-content:space-between;
}
.imgall image{
  display:block;
  width:30%;
  height:200rpx;
  margin-top:20rpx;
}
.addimage{
  display:block;
  width:120rpx;
  height:120rpx;
  margin-top:30rpx;
}
.wxbtn{
  border-radius:50%;
  width:90rpx;
  height:90rpx;
  margin: 20rpx auto;
  padding-left:0;
  padding-right:0;
}