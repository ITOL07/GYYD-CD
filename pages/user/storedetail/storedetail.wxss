/* pages/user/storedetail/storedetail.wxss */
.container{
  background:#FFFFFF;
}
.top{
  width:100%;
  height:90rpx;
  background:#2D2E33;
  display:flex;
  justify-content:flex-end;
  position:fixed;
  align-items:center;
  top:0;
}
.edit{
  color:#FFFFFF;
  font-size:30rpx;
  margin-right:5%;
}
.detail_header{
  width: 100%;
  height: 218rpx;
  display: flex;
  flex-direction: row;
  align-items:center;
  /* margin-top:110rpx; */
}
.detail_header .header_left{
  width:25%;
  height:80%;
  margin-left:5%;
  display:flex;
  align-items:center;
}
.detail_header .header_left image{
  display:block;
  width:150rpx;
  height:150rpx;
}
.detail_header .header_right{
  width:65%;
  height:80%;
  display:flex;
  flex-direction:column;
}
.detail_header .header_right .item{
  width:100%;
  height:33%;
  display:flex;
  align-items:center;
}
.detail_header .header_right .title{
  color:#333333;
  font-size:30rpx;
}
.detail_header .header_right text{
  font-size:22rpx;
  line-height:22rpx;
  color:#666666;
}
.detail_header .header_right .phone{
  width:100%;
  display:flex;
  flex-direction:row;
}

.store_middle{
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  margin-top:20rpx;
  padding-left:5%;
}
.middle_top{
  width:100%;
  height:50%;
} 
.line{
  color:#EE6F2D;
}
.middle_top .txt{
  color:#333333;
  font-size:30rpx;
  margin-left:2%;
}
.middle-bottom{
  width:100%;
  height:50%;
}
.middle_bottom{
  font-size:30rpx;
  color:#666666;
  /* margin-left:4%; */
}
.store_facilities text{
  background:#EEEEEE;
  display: flex;
  flex-direction: row;
}
.map{
  width: 90%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  margin:20rpx auto;
}
.map .middle_top{
  width:100%;
  height:30%;
}
#map{
  margin-top:20rpx;
}

.storeimg{
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  margin-top:40rpx;
  padding-left:5%;
}
.storeimg .middle_top{
  width:100%;
  height:30%;
}
.imgall{
	width: 98%;
	margin-top: 20rpx; 
	margin-left: 3%; 
	flex-wrap: wrap;
}
.imgall image{
	width: 200rpx;
	height: 200rpx;
	margin-right: 30rpx;
	margin-bottom: 20rpx;
}